# Stacks Blockchain Configuration
# Copy this file to .env and fill in your values

# IMPORTANT: NEVER commit .env to git!

# Deployer Private Key (for deploying event-registry.clar ONLY)
# Get testnet STX from: https://explorer.hiro.so/sandbox/faucet?chain=testnet
STACKS_PRIVATE_KEY=

# Stacks Network (testnet for hackathon)
VITE_NETWORK=testnet

# Event Registry Contract Address (update after deploying event-registry.clar)
# Format: PRINCIPAL.CONTRACT-NAME
# Example: ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM.event-registry
VITE_REGISTRY_CONTRACT_ADDRESS=

# Turnkey Configuration
VITE_TURNKEY_ORGANIZATION_ID=your-turnkey-org-id-here
VITE_TURNKEY_AUTH_PROXY_CONFIG_ID=your-auth-proxy-config-id

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Pinata Configuration (for IPFS uploads)
# Get API keys from: https://app.pinata.cloud/developers/api-keys
VITE_PINATA_JWT=
VITE_PINATA_GATEWAY_URL=https://gateway.pinata.cloud

# Google Maps API Key (for venue search)
# Get from: https://console.cloud.google.com/google/maps-apis
VITE_GOOGLE_MAPS_API_KEY=

# sBTC Contract Address (testnet)
VITE_SBTC_CONTRACT_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
VITE_SBTC_CONTRACT_NAME=sbtc-token

# Hiro API Configuration
# Get API key from: https://platform.hiro.so/
VITE_HIRO_API_KEY=

# Web3Forms Configuration (for email reminders)
# Get access key from: https://web3forms.com
VITE_WEB3FORMS_KEY=

# Hackathon Mode
VITE_HACKATHON_MODE=true

# Feature Flags
VITE_ENABLE_DYNAMIC_PRICING=true
VITE_ENABLE_SBTC=false

# Note: Event contracts are deployed using user's Turnkey wallet
# Platform private key (STACKS_PRIVATE_KEY) is ONLY for deploying event-registry.clar
