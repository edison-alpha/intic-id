# ============================================================================
# INTIC Platform - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# For production (Vercel), set these in Vercel Dashboard > Settings > Environment Variables

# IMPORTANT: NEVER commit .env to git!

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application URL
VITE_APP_URL=http://localhost:5173

# Stacks Network (testnet for development, mainnet for production)
VITE_NETWORK=testnet
VITE_STACKS_NETWORK=testnet

# ============================================================================
# HIRO API CONFIGURATION
# ============================================================================
# Get API key from: https://www.hiro.so/ or https://platform.hiro.so/
# REQUIRED for production to avoid rate limiting!

VITE_HIRO_API_URL=https://api.testnet.hiro.so
VITE_HIRO_API_KEY=your_hiro_api_key_here

# Backend server also needs Hiro API key
HIRO_API_URL=https://api.testnet.hiro.so
HIRO_API_KEY=your_hiro_api_key_here

# ============================================================================
# BACKEND/SERVER CONFIGURATION
# ============================================================================

PORT=8000
NODE_ENV=development
STACKS_NETWORK=testnet

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# ============================================================================
# BLOCKCHAIN CONTRACTS
# ============================================================================

# Event Registry Contract (update after deploying event-registry-v2.clar)
VITE_REGISTRY_CONTRACT_ADDRESS=ST1X7MNQF6TKA52PA7JRH99S9KKXH9TY8CSG8AK4C
VITE_EVENT_REGISTRY_ADDRESS=ST1X7MNQF6TKA52PA7JRH99S9KKXH9TY8CSG8AK4C
VITE_EVENT_REGISTRY_CONTRACT=event-registry-v2

# sBTC Contract Address (testnet)
VITE_SBTC_CONTRACT_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
VITE_SBTC_CONTRACT_NAME=sbtc-token

# ============================================================================
# WALLET CONFIGURATION (Optional - for Turnkey integration)
# ============================================================================

VITE_TURNKEY_ORGANIZATION_ID=your-turnkey-org-id-here
VITE_TURNKEY_AUTH_PROXY_CONFIG_ID=your-auth-proxy-config-id

# ============================================================================
# OAUTH CONFIGURATION (Optional)
# ============================================================================

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# Pinata (for IPFS uploads)
# Get API keys from: https://app.pinata.cloud/developers/api-keys
VITE_PINATA_JWT=
VITE_PINATA_GATEWAY_URL=https://gateway.pinata.cloud

# Google Maps API (for venue search)
# Get from: https://console.cloud.google.com/google/maps-apis
VITE_GOOGLE_MAPS_API_KEY=

# Web3Forms (for email reminders)
# Get access key from: https://web3forms.com
VITE_WEB3FORMS_KEY=1c938d7e-0c4f-4b5f-8855-c79a647f8211

# ============================================================================
# DEPLOYMENT CONFIGURATION (for CLI deployment - Optional)
# ============================================================================

# Deployer Private Key (ONLY for deploying event-registry.clar via CLI)
# Get testnet STX from: https://explorer.hiro.so/sandbox/faucet?chain=testnet
# NOTE: Event contracts are deployed using user's wallet (Xverse/Leather/Hiro)
STACKS_PRIVATE_KEY=

# ============================================================================
# FEATURE FLAGS
# ============================================================================

VITE_HACKATHON_MODE=true
VITE_ENABLE_DYNAMIC_PRICING=true
VITE_ENABLE_SBTC=false

# ============================================================================
# PRODUCTION SETTINGS (for Vercel deployment)
# ============================================================================
# These should be set in Vercel Dashboard, not in .env file:
# 
# Required for Production:
# - VITE_APP_URL=https://intic-id.vercel.app
# - FRONTEND_URL=https://intic-id.vercel.app
# - VITE_HIRO_API_KEY=<your_hiro_api_key>
# - HIRO_API_KEY=<your_hiro_api_key>
# - NODE_ENV=production
# 
# Optional but recommended:
# - VITE_GOOGLE_MAPS_API_KEY
# - VITE_PINATA_JWT
# - VITE_GOOGLE_CLIENT_ID
# ============================================================================

